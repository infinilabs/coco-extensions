{
  "name": "Spotify Controls",
  "platforms": [
    "macos"
  ],
  "description": "Control Spotify playback with commands to play/pause, and skip to the next or previous track.",
  "icon": "icon.png",
  "type": "extension",
  "category": "Utilities",
  "tags": ["Media", "Productivity"],
  "screenshots": [
      { "title": "", "url": "screenshot.png" }
  ],
  "commands": [
    {
      "id": "toggle_play_pause",
      "name": "Toggle Play/Pause",
      "description": "...",
      "icon": "icon.png",
      "type": "command",
      "action": {
        "exec": "zsh",
        "args": [
          "-c",
          "osascript -e 'try' -e 'tell application \"Spotify\" to playpause' -e 'end try'"
        ]
      },
      "alias": "",
      "enabled": true
    },
    {
      "id": "next_track",
      "name": "Next track",
      "description": "...",
      "icon": "icon.png",
      "type": "command",
      "action": {
        "exec": "zsh",
        "args": [
          "-c",
          "osascript -e 'try' -e 'tell application \"Spotify\" to next track' -e 'end try'"
        ]
      },
      "alias": "",
      "enabled": true
    },
    {
      "id": "previous_track",
      "name": "Previous track",
      "description": "Returns to the previous track in the Spotify playlist.",
      "icon": "icon.png",
      "type": "command",
      "action": {
        "exec": "zsh",
        "args": [
          "-c",
          "osascript -e 'try' -e 'tell application \"Spotify\" to previous track' -e 'end try'"
        ]
      },
      "alias": "",
      "enabled": true
    }
  ],
  "enabled": true
}
